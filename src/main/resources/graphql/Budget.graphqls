type BudgetItem {
    id: ID!
    name: String!
    amount: Int
    dayOfMonth: Int
    split: Boolean
}

input BudgetItemInput {
    name: String
    amount: Int
    dayOfMonth: Int
    split: Boolean
}

type Query {
    budgetItems: [BudgetItem]!
}

type Mutation {
    createBudgetItem(budgetItem: BudgetItemInput!) : BudgetItem!
    deleteBudgetItem(id: ID!): BudgetItem
}